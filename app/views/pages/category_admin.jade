extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/category")
        .form-group
          label.col-sm-3.control-label(for="inputCatetory") 电影分类
          .col-sm-7
            input#inputCatetory.form-control(type="text", name="category[name]", 
            value=category.name)
        .form-group
          .col-sm-offset-3.col-sm-6
          button.btn.btn-default(type="submit") 录入     